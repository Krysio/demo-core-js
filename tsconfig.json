{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "./dist",
        "moduleResolution": "Node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "esnext",
        "noImplicitAny": true,
        "outDir": "./dist",
        "target": "esnext",
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "rootDir": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/*"
    ]
}
